# This is Git's per-user configuration file.
[user]
	name = Michael Karbowiak
	email = michael@karbowiak.dk
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIE3CnISvv/khWRib7D0u//4uZpfIMNXjLv0s5VM1Losz
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	allowedSignersFile = /Users/karbowiak/.config/git/allowed_signers
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
